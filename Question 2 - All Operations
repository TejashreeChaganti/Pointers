Question 2 - All Operations  #include <iostream>
#include <cmath>
using namespace std;

// 1. Palindrome
bool isPalindrome(int* num) {
    int original = *num, reversed = 0, temp = *num;
    while (temp > 0) {
        reversed = reversed * 10 + temp % 10;
        temp /= 10;
    }
    return (original == reversed);
}

// 2. Perfect Number
bool isPerfect(int* num) {
    int sum = 0;
    for (int i = 1; i <= *num / 2; i++) {
        if (*num % i == 0) sum += i;
    }
    return (sum == *num);
}

// 3. Armstrong Number
bool isArmstrong(int* num) {
    int original = *num, sum = 0, digits = 0, temp = *num;
    while (temp > 0) { digits++; temp /= 10; }
    temp = *num;
    while (temp > 0) {
        int digit = temp % 10;
        sum += pow(digit, digits);
        temp /= 10;
    }
    return (sum == original);
}

// 4. Prime Number
bool isPrime(int* num) {
    if (*num <= 1) return false;
    if (*num == 2) return true;
    if (*num % 2 == 0) return false;
    for (int i = 3; i <= sqrt(*num); i += 2) {
        if (*num % i == 0) return false;
    }
    return true;
}

// 5. Odd/Even
void checkOddEven(int* num) {
    if (*num % 2 == 0)
        cout << *num << " is Even" << endl;
    else
        cout << *num << " is Odd" << endl;
}

// 6. Max and Min
void findMaxMin(int* arr, int* size, int* max, int* min) {
    *max = *min = *arr;
    for (int i = 1; i < *size; i++) {
        if (*(arr + i) > *max) *max = *(arr + i);
        if (*(arr + i) < *min) *min = *(arr + i);
    }
}

// 7. Factorial
long long factorial(int* num) {
    long long result = 1;
    for (int i = 2; i <= *num; i++) {
        result *= i;
    }
    return result;
}

// 8. Composite Number
bool isComposite(int* num) {
    if (*num <= 1) return false;
    return !isPrime(num);
}

// 9. Square
void computeSquare(int* num, int* result) {
    *result = (*num) * (*num);
}

// 10. Square Root
void computeSquareRoot(int* num, double* result) {
    *result = sqrt(*num);
}

// 11. Cube
void computeCube(int* num, int* result) {
    *result = (*num) * (*num) * (*num);
}

// 12. Cube Root
void computeCubeRoot(int* num, double* result) {
    *result = cbrt(*num);
}

int main() {
    int choice, num;
    int* pNum = &num;
    
    cout << "=== NUMBER OPERATIONS (Using Pointers) ===" << endl;
    cout << "1. Check Palindrome" << endl;
    cout << "2. Check Perfect Number" << endl;
    cout << "3. Check Armstrong Number" << endl;
    cout << "4. Check Prime Number" << endl;
    cout << "5. Check Odd/Even" << endl;
    cout << "6. Find Max/Min in Array" << endl;
    cout << "7. Calculate Factorial" << endl;
    cout << "8. Check Composite Number" << endl;
    cout << "9. Calculate Square" << endl;
    cout << "10. Calculate Square Root" << endl;
    cout << "11. Calculate Cube" << endl;
    cout << "12. Calculate Cube Root" << endl;
    cout << "\nEnter choice: ";
    cin >> choice;
    
    if (choice == 6) {
        int size;
        cout << "Enter array size: ";
        cin >> size;
        int* arr = new int[size];
        cout << "Enter " << size << " numbers: ";
        for (int i = 0; i < size; i++) cin >> *(arr + i);
        int max, min;
        findMaxMin(arr, &size, &max, &min);
        cout << "Max: " << max << ", Min: " << min << endl;
        delete[] arr;
    } else {
        cout << "Enter number: ";
        cin >> *pNum;
        
        switch(choice) {
            case 1:
                cout << (isPalindrome(pNum) ? "Palindrome" : "Not Palindrome") << endl;
                break;
            case 2:
                cout << (isPerfect(pNum) ? "Perfect Number" : "Not Perfect") << endl;
                break;
            case 3:
                cout << (isArmstrong(pNum) ? "Armstrong Number" : "Not Armstrong") << endl;
                break;
            case 4:
                cout << (isPrime(pNum) ? "Prime Number" : "Not Prime") << endl;
                break;
            case 5:
                checkOddEven(pNum);
                break;
            case 7: {
                long long fact = factorial(pNum);
                cout << "Factorial: " << fact << endl;
                break;
            }
            case 8:
                cout << (isComposite(pNum) ? "Composite Number" : "Not Composite") << endl;
                break;
            case 9: {
                int sq;
                computeSquare(pNum, &sq);
                cout << "Square: " << sq << endl;
                break;
            }
            case 10: {
                double sqr;
                computeSquareRoot(pNum, &sqr);
                cout << "Square Root: " << sqr << endl;
                break;
            }
            case 11: {
                int cb;
                computeCube(pNum, &cb);
                cout << "Cube: " << cb << endl;
                break;
            }
            case 12: {
                double cbr;
                computeCubeRoot(pNum, &cbr);
                cout << "Cube Root: " << cbr << endl;
                break;
            }
            default:
                cout << "Invalid choice" << endl;
        }
    }
    return 0;
}
